<!--index.wxml-->
<view class="container">
  <!-- camera.wxml -->
  <camera device-position="back" flash="off" binderror="photoError" style="width: 100%; height: 300px;"></camera>
  <button type="primary" bindtap="takePhoto">拍照</button>
  <view>预览</view>
  <image mode="widthFix" src="{{photoSrc}}"></image>
  <button type='primary' bindtap='onThiefColor'>识别</button>
  <canvas style="width: 100px; height: 100px;" class='canvasPlaceholder' canvas-id='canvasPlaceholder'></canvas>
  <view style="background:{{mainColor}};" class='mainColor'></view>
</view>
